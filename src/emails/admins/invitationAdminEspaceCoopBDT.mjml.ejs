<mjml>

  <%- include('../commun/head.mjml.ejs'); %>

  <mj-body background-color="#f0f0f0">

    <%- include('../commun/header.mjml.ejs', { utils }); %>

      <mj-wrapper css-class="wrapper">
        <mj-section>
          <mj-column>
            <mj-text css-class="text-primary">
              Connectez-vous en tant qu'administrateur sur le backoffice de l'Espace Coop.
            </mj-text>
            <mj-text>
              Madame, Monsieur,
            </mj-text>
            <mj-text>
              Vous avez été invité sur la plateforme coop.conseiller-numerique.gouv.fr pour rejoindre l'espace Coop en tant qu'administrateur.
            </mj-text>
          </mj-column>
        </mj-section>

        <mj-section css-class="box" padding-top="0" padding-left="100px" padding-right="100px">
          <mj-column border="1px solid #C8CBCE">
            <mj-text font-size="18px" font-weight="bold" line-height="22px" padding-bottom="0">
              Votre identifiant
            </mj-text>
            <mj-text font-size="14px" line-height="21px">
              <%= user.name %>
            </mj-text>
            <mj-text font-size="18px" font-weight="bold" line-height="22px" padding-bottom="0">
              Votre mot de passe
            </mj-text>
            <mj-text font-size="14px" line-height="21px" font-weight="bold" text-decoration="underline">
              identique à celui de votre compte sur admin.conseiller-numerique.gouv.fr
            </mj-text>

            <mj-text padding="0" css-class="text-secondary">
              Suivez ce lien pour vous connecter :
            </mj-text>

            <mj-button href="<%= link %>" background-color="#24303A" color="#F4F4F5" font-size="16px" font-weight="bold"
              text-transform="uppercase">
              Accéder à mon espace administrateur
            </mj-button>
          </mj-column>
        </mj-section>
      </mj-wrapper>
      <mj-wrapper css-class="wrapper">
        <mj-section>
          <mj-column>

      <%- include('../commun/signature.mjml.ejs'); %>
    </mj-column>
  </mj-section>
</mj-wrapper>
  </mj-body>
</mjml>
